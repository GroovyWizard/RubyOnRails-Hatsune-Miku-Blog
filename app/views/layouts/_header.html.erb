<header id="header" class="navbar navbar-fixed-top navbar-inverse">
      <div id="header-container" class="container">
         <div id="navbarlogo" class="navbar-brand">
            <%= link_to image_tag("logo_miku_us", class: "logo", id: "mikulogo", size: '200x100'), root_path %>
         </div>

         <nav>
            <div class="navbar-header">
               <button type="button" class="navbar-toggle collapsed"
                       data-toggle="collapse"
                       data-target="#bs-example-navbar-collapse-1"
                       aria-expanded="false">
                  <span class="sr-only">Toggle navigation</span>
                  <span class="icon-bar"></span>
                  <span class="icon-bar"></span>
                  <span class="icon-bar"></span>
               </button>        
            </div>
            <ul class="nav navbar-nav navbar-right collpase navbar-collapse" id="bs-example-navbar-collapse-1">    
               <li> <%= link_to "Home",  root_path %> </li>
               <li> <%= link_to "Help",  help_path %> </li>
               <li> <%= link_to "About", about_path %></li>
               <li> <%= link_to "Contact", contact_path %></li>
               <%# THE LOGIN PART TO CHECK IF THERES A USER LOGGED OR NOT %>
               <% if logged_in? %>
                  <li> <%= link_to "Users", '#' %></li>
                  <li class= "dropdown">
                     <a href="#" class="dropdown-toggle" data-toggle="dropdown">               
                        Account  <b class="caret"></b>
                     </a>
                     <ul class="dropdown-menu">
                        <li><%= link_to "Profile", current_user %></li>
                        <li><%= link_to "Settings", '#'%></li>
                        <li class="divider"></li>
                     <li> 
                        <%= link_to "Log out", logout_path, method: :delete %>
                     </li>
                  </li>          
               <% else %>
               <li>
                  <%= link_to "Log in", login_path %>
               </li>
               <% end %>
          </ul>
         </nav>
      </div>
   </header>




